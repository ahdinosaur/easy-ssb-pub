{
  "name": "easy-ssb-pub",
  "version": "2.0.0",
  "private": true,
  "description": "Deploy a Secure Scuttlebutt Pub easily",
  "author": "Andre Staltz",
  "license": "MIT",
  "main": "dist/index.js",
  "dependencies": {
    "@types/debug": "0.0.29",
    "@types/express": "^4.0.35",
    "@types/minimist": "^1.2.0",
    "@types/superagent": "^2.0.36",
    "body-parser": "^1.16.0",
    "debug": "^2.6.1",
    "discovery-swarm": "^4.3.0",
    "ejs": "^2.5.5",
    "express": "^4.14.0",
    "minimist": "^1.2.0",
    "path": "^0.12.7",
    "qr-image": "^3.2.0",
    "scuttlebot": "github:ssbc/scuttlebot#slow-sbot",
    "ssb-keys": "^7.0.8",
    "superagent": "^3.5.0",
    "typescript": "^2.2.1"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.39",
    "@types/supertest": "^2.0.0",
    "html-looks-like": "^1.0.1",
    "mocha": "^3.2.0",
    "supertest": "^3.0.0",
    "ts-node": "^2.1.0",
    "tslint": "^4.5.1"
  },
  "scripts": {
    "compile": "tsc",
    "start": "tsc && node dist/index --host $PUB_URL",
    "lint": "tslint -c tslint.json src/**/*.ts src/*.ts",
    "mocha": "mocha tests/*.ts tests/**/*.ts --require ts-node/register",
    "test": "npm run lint && npm run mocha",
    "docker:build": "docker build -t ahdinosaur/easy-ssb-pub .",
    "docker:run": "docker run -it ahdinosaur/easy-ssb-pub",
    "docker:push": "docker push ahdinosaur/easy-ssb-pub"
  },
  "engines": {
    "node": "6.9.1"
  }
}
